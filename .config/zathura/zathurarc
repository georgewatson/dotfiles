set font                        "Caskaydia Cove Nerd Font 11"
set default-bg                  "#333333"
set default-fg                  "#cccccc"

set statusbar-bg                "#333333"
set statusbar-fg                "#cccccc"

set inputbar-bg                 "#333333"
set inputbar-fg                 "#cccccc"

set notification-error-bg       "#333333"
set notification-error-fg       "#f33051"

set notification-warning-bg     "#333333"
set notification-warning-fg     "#f3df30"

set highlight-color             "#30b7f3"
set highlight-active-color      "#63f330"

set completion-highlight-fg     "#30b7f3"
set completion-highlight-bg     "#333333"

set completion-bg               "#333333"
set completion-fg               "#cccccc"

set notification-bg             "#333333"
set notification-fg             "#30b7f3"

set recolor-lightcolor          "#333333"
set recolor-darkcolor           "#cccccc"
set recolor                     "true"

# setting recolor-keep true will keep any color your pdf has.
# if it is false, it'll just be black and white
# set recolor-keephue             "false"
set recolor-keephue             "true"

# Enable copying to clipboard
set selection-clipboard clipboard

# Disable the statusbar
set guioptions                  ""

set adjust-open                 "width"

map <C-s> toggle_statusbar
