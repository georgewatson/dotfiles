bindsym XF86AudioNext exec mpc next
bindsym XF86AudioPrev exec mpc prev

# PrtSc
# Whole screen
bindsym --release Print exec scrot -e 'xclip -selection clipboard -t image/png -i $f && mv $f ~/Pictures/screenshots && notify-send -i "~/Pictures/screenshots/$f" "Screenshot saved" $f'
# Select window or rectangle
bindsym --release Shift+Print exec scrot -s -e 'xclip -selection clipboard -t image/png -i $f && mv $f ~/Pictures/screenshots && notify-send -i "~/Pictures/screenshots/$f" "Screenshot saved" $f'

