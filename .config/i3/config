# Fix keyboard LEDs
exec --no-startup-id xkbcomp myconf.xkb $DISPLAY
# Rebind caps lock as escape
# This leaves no caps-lock available
# Rebind pause (fn + right shift) as compose
# Use left alt + left shift to toggle English & Greek
exec --no-startup-id setxkbmap -layout gb,gr -variant extd, -option caps:escape -option compose:paus -option 'grp:lalt_lshift_toggle'

# Enable multimedia keys
#
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/dotfiles/volume.sh up
bindsym XF86AudioLowerVolume exec --no-startup-id ~/dotfiles/volume.sh down
bindsym XF86AudioMute exec --no-startup-id ~/dotfiles/volume.sh mute

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 && ~/dotfiles/backlight.sh
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 && ~/dotfiles/backlight.sh

