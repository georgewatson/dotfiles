# PrtSc
# Whole screen
bindsym --release Print exec --no-startup-id scrot -e 'xclip -selection clipboard -t image/png -i $f && mv $f ~/Pictures/screenshots && notify-send -i "~/Pictures/screenshots/$f" -a "scrot" "Screenshot saved" $f'
# Select window or rectangle
bindsym --release Shift+Print exec --no-startup-id scrot -s -e 'xclip -selection clipboard -t image/png -i $f && mv $f ~/Pictures/screenshots && notify-send -i "~/Pictures/screenshots/$f" -a "scrot" "Screenshot saved" $f'

