# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        i3bar_command i3bar -t
        position top
        status_command i3status
        separator_symbol " "
        colors {
                background #33333300
                statusline #cccccc
                focused_workspace #30b7f3 #30b7f3 #333333
                active_workspace #63f330 #63f330 #333333
                inactive_workspace #33333300 #33333300 #cccccc
                urgent_workspace #f33051 #f33051 #333333
        }
}

